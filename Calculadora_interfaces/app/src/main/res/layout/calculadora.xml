<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculadora"
    android:background="@color/black">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/primerVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="36dp"
        app:layout_constraintGuide_percent="0.01"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/segundaVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="36dp"
        app:layout_constraintGuide_percent="0.24"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/terceraVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="36dp"
        app:layout_constraintGuide_percent="0.49"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cuartaVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="36dp"
        app:layout_constraintGuide_percent="0.74"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ultimaVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="487dp"
        app:layout_constraintGuide_percent="0.99" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/primeraHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="36dp"
        app:layout_constraintGuide_percent="0.01"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/segundaHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="258dp"
        app:layout_constraintGuide_percent="0.25" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/terceraHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="36dp"
        app:layout_constraintGuide_percent="0.38"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cuartaHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="36dp"
        app:layout_constraintGuide_percent="0.51"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/quintaHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="36dp"
        app:layout_constraintGuide_percent="0.64"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sextaHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="36dp"
        app:layout_constraintGuide_percent="0.77"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/septimaHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="36dp"
        app:layout_constraintGuide_percent="0.90"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ultimaHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="36dp"
        app:layout_constraintGuide_percent="0.99"/>


    <TextView
        android:id="@+id/resultado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="#FF9800"
        android:gravity="right|center_vertical"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/segundaHorizontal"
        app:layout_constraintEnd_toEndOf="@id/ultimaVertical"
        app:layout_constraintStart_toStartOf="@+id/primerVertical"
        app:layout_constraintTop_toTopOf="@+id/primeraHorizontal" />

    <Button
        android:id="@+id/multi"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:width="5dp"
        android:height="10dp"
        android:layout_margin="5dp"
        android:backgroundTint="#FF9800"
        android:textColor="@color/black"
        android:text="*"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/terceraHorizontal"
        app:layout_constraintEnd_toStartOf="@+id/segundaVertical"
        app:layout_constraintStart_toStartOf="@+id/primerVertical"
        app:layout_constraintTop_toTopOf="@+id/segundaHorizontal" />

    <Button
        android:id="@+id/sumar"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:width="5dp"
        android:height="10dp"
        android:layout_margin="5dp"
        android:backgroundTint="#FF9800"
        android:text="+"
        android:textSize="50dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/terceraHorizontal"
        app:layout_constraintEnd_toStartOf="@+id/terceraVertical"
        app:layout_constraintStart_toStartOf="@+id/segundaVertical"
        app:layout_constraintTop_toTopOf="@+id/segundaHorizontal" />

    <Button
        android:id="@+id/restar"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:width="5dp"
        android:height="10dp"
        android:backgroundTint="#FF9800"
        android:text="-"
        android:textSize="50dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/terceraHorizontal"
        app:layout_constraintEnd_toStartOf="@+id/cuartaVertical"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="@+id/terceraVertical"
        app:layout_constraintTop_toTopOf="@+id/segundaHorizontal" />

    <Button
        android:id="@+id/dividir"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:width="5dp"
        android:height="10dp"
        android:textSize="50dp"
        android:layout_margin="5dp"
        android:backgroundTint="#FF9800"
        android:textColor="@color/black"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@+id/terceraHorizontal"
        app:layout_constraintEnd_toStartOf="@+id/ultimaVertical"
        app:layout_constraintStart_toStartOf="@+id/cuartaVertical"
        app:layout_constraintTop_toTopOf="@+id/segundaHorizontal" />

    <Button
        android:id="@+id/num7"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="7"
        android:textSize="50dp"
        android:layout_margin="5dp"
        android:backgroundTint="#FF9800"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/cuartaHorizontal"
        app:layout_constraintEnd_toStartOf="@+id/segundaVertical"
        app:layout_constraintStart_toStartOf="@+id/primerVertical"
        app:layout_constraintTop_toTopOf="@+id/terceraHorizontal" />
    <Button
        android:id="@+id/num8"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="8"
        android:textSize="50dp"
        android:backgroundTint="#FF9800"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/cuartaHorizontal"
        app:layout_constraintEnd_toStartOf="@+id/terceraVertical"
        app:layout_constraintStart_toStartOf="@+id/segundaVertical"
        app:layout_constraintTop_toTopOf="@+id/terceraHorizontal" />

    <Button
        android:id="@+id/num9"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="#FF9800"
        android:text="9"
        android:textSize="50dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/cuartaHorizontal"
        app:layout_constraintEnd_toStartOf="@+id/cuartaVertical"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="@+id/terceraVertical"
        app:layout_constraintTop_toTopOf="@+id/terceraHorizontal"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/num4"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:backgroundTint="#FF9800"
        android:text="4"
        android:textSize="50dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/quintaHorizontal"
        app:layout_constraintEnd_toStartOf="@+id/segundaVertical"
        app:layout_constraintStart_toStartOf="@+id/primerVertical"
        app:layout_constraintTop_toTopOf="@+id/cuartaHorizontal"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/num5"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:backgroundTint="#FF9800"
        android:text="5"
        android:textSize="50dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/quintaHorizontal"
        app:layout_constraintEnd_toStartOf="@+id/terceraVertical"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/segundaVertical"
        app:layout_constraintTop_toTopOf="@+id/cuartaHorizontal"
        app:layout_constraintVertical_bias="0.586" />

    <Button
        android:id="@+id/num6"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_marginStart="4dp"
        android:textSize="50dp"
        android:backgroundTint="#FF9800"
        android:text="6"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/quintaHorizontal"
        app:layout_constraintEnd_toStartOf="@+id/cuartaVertical"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="@+id/terceraVertical"
        app:layout_constraintTop_toTopOf="@+id/cuartaHorizontal"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/num1"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:backgroundTint="#FF9800"
        android:text="1"
        android:textSize="50dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/sextaHorizontal"
        app:layout_constraintEnd_toStartOf="@+id/segundaVertical"
        app:layout_constraintStart_toStartOf="@+id/primerVertical"
        app:layout_constraintTop_toTopOf="@+id/quintaHorizontal" />
    <Button
        android:id="@+id/num2"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="2"
        android:textSize="50dp"
        android:backgroundTint="#FF9800"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/sextaHorizontal"
        app:layout_constraintEnd_toStartOf="@+id/terceraVertical"
        app:layout_constraintStart_toStartOf="@+id/segundaVertical"
        app:layout_constraintTop_toTopOf="@+id/quintaHorizontal" />

    <Button
        android:id="@+id/num3"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#FF9800"
        android:text="3"
        android:textSize="50dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/sextaHorizontal"
        app:layout_constraintEnd_toStartOf="@+id/cuartaVertical"
        app:layout_constraintHorizontal_bias="0.242"
        app:layout_constraintStart_toStartOf="@+id/terceraVertical"
        app:layout_constraintTop_toTopOf="@+id/quintaHorizontal" />

    <Button
        android:id="@+id/num0"
        android:layout_margin="5dp"
        android:layout_width="294dp"
        android:layout_height="80dp"
        android:backgroundTint="#FF9800"
        android:text="0"
        android:textSize="50dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/septimaHorizontal"
        app:layout_constraintEnd_toStartOf="@+id/cuartaVertical"
        app:layout_constraintStart_toStartOf="@+id/primerVertical"
        app:layout_constraintTop_toTopOf="@+id/sextaHorizontal" />
    <Button
        android:id="@+id/borrar"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:backgroundTint="#FF9800"
        android:text="C"
        android:textSize="50dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/septimaHorizontal"
        app:layout_constraintEnd_toStartOf="@+id/ultimaVertical"
        app:layout_constraintStart_toStartOf="@+id/cuartaVertical"
        app:layout_constraintTop_toTopOf="@+id/sextaHorizontal" />

    <Button
        android:id="@+id/igual"
        android:layout_margin="5dp"
        android:layout_width="80dp"
        android:layout_height="230dp"
        android:backgroundTint="#FF9800"
        android:text="="
        android:textSize="50dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/sextaHorizontal"
        app:layout_constraintEnd_toStartOf="@+id/ultimaVertical"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/cuartaVertical"
        app:layout_constraintTop_toTopOf="@+id/terceraHorizontal"
        app:layout_constraintVertical_bias="0.866" />

</androidx.constraintlayout.widget.ConstraintLayout>